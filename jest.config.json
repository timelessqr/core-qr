{
  "testEnvironment": "node",
  "testTimeout": 30000,
  "setupFilesAfterEnv": ["<rootDir>/tests/helpers/testSetup.js"],
  "testMatch": [
    "**/tests/**/*.test.js"
  ],
  "collectCoverageFrom": [
    "src/**/*.js",
    "!src/**/*.test.js",
    "!**/node_modules/**"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": [
    "text",
    "lcov",
    "html"
  ],
  "verbose": true,
  "forceExit": true,
  "detectOpenHandles": true,
  "maxWorkers": 1,
  "testSequencer": "<rootDir>/tests/helpers/testSequencer.js"
}